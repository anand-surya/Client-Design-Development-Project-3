@model Project3_FinalExam.ViewModels.EmploymentViewModel

@section CSS {
    <style>
        tr:nth-child(even) {background-color: orange;}
        th {
            background-color: beige;
        }
        table{
            border: solid 2px orange;
        }
        h2{
            text-align: center;
        }
        body{
            background-color:bisque;
        }
        .modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        /* Modal Content/Box */
        .modal-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% from the top and centered */
            padding: 20px;
            border: 1px solid #888;
            width: 80%; /* Could be more or less, depending on screen size */
        }
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
        #myBtn {
            padding: 10px;
            margin: auto;
            display: block;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
            background-color: #FF9A1E; 
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
        }
        .map {
            width: 750px;
            height: 420px;
            border: none;
            display:block;
            margin:auto;
            padding: 10px;
        }
        
    </style>
}
<h2>@Model.Title</h2>
<button id="myBtn">Employment Table</button>
<div id="emp" class="modal">
    <div id="myEmployment" class="modal-content">
       
        <span class="close">&times; </span>

        <table class="tablesorter highlight striped responsive-table" style="table-layout: fixed;">
            <thead><tr><th>Employer </th><th>Degree</th><th>City</th><th>Title</th><th>Start Date</th></tr></thead>
            @foreach (var under in Model.Emp)
            {
    <tr>
        <td> @under.employer.</td>
        <td> @under.degree</td>
        <td> @under.city</td>
        <td> @under.title</td>
        <td> @under.startDate</td>
    </tr>
}
        </table>
    </div>
    </div>
<div class="row">
    <div class="col s12">
        <h2 style="padding-top:10px;">Where Our Students Work</h2>
        <p class="center-align hide-on-small-only" style="text-align:center">Click a marker to learn more about the jobs at that location</p>
        <iframe class="map hide-on-small-only"  src="http://www.ist.rit.edu/api/map/"></iframe>
    </div>
</div>

@*Get jQuery and jQueryUI Scripts from wwwroot*@
@section Scripts {
    <script src="~/jquery/jquery.js"></script>
    <link rel="stylesheet" href="~/jqueryui/themes/le-frog/jquery-ui.min.css">
    <script src="~/tablesorter/jquery.tablesorter.js"></script>
    <script src="https://unpkg.com/sticky-table-headers"></script>
    <script src="~/jqueryui/jquery-ui.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <script>
	// Create Accordion

	
        $(".tablesorter").tablesorter();
        $('table').stickyTableHeaders({ scrollableArea: $('.modal') });

        var modal = document.getElementById("emp");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on the button, open the modal 
        btn.onclick = function () {
            modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
}