@model Project3_FinalExam.ViewModels.GradViewModel

@section scri {
    <script src="~/materialize/materialize.css"></script>
    <script src="~/materialize/materialize.min.css"></script>
    <script src="~/jqueryui/jquery-ui.css"></script>

}

@section CSS {
    <style>
        body {
            background-color: bisque;
        }

        .card.medium {
            width: 300px;
            height: 445px;
        }

        h4 {
            text-align: center;
            color: white;
        }
        h2{
            text-align: center;
        }
        #desc {
            text-align: center;
        }

        .card {
            background-color: darkorange;
        }
        .card-content{
            padding-top:10px;
        }
    </style>
}

<h2>@Model.Title</h2>
<div class="row">
    @foreach (var grad in Model.Grads)
    {

<div class="col s12 m6 l4">
    <div class="card medium">
        @*<div class="card-image waves-effect">
                <img src= @Model.imgArray[0] style="width:300px; height:200px" />
            </div>*@
        <div class="card-content">
            <h4 style="background-color:gray"> @grad.title</h4>
            <p id="desc"> @grad.description</p>
            <p><b>Concentrations:</b></p>
            <ul>
                @foreach (var con in grad.concentrations)
                {
<li> @con</li>                }
            </ul>
        </div>
    </div>
</div>      }

</div>




